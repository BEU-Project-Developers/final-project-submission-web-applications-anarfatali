@model List<Photo>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<!-- Page Title -->
<div class="page-title" data-aos="fade">
    <div class="heading">
        <div class="container">
            <div class="row d-flex justify-content-center text-center">
                <div class="col-lg-8">
                    <h1>Gallery</h1>
                    <p class="mb-0">Explore stunning images by different categories.</p>
                    <a asp-controller="Contact" asp-action="Index" class="cta-btn">CONTACT US<br></a>
                </div>
            </div>
        </div>
    </div>
    <nav class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="current">Gallery</li>
            </ol>
        </div>
    </nav>
</div><!-- End Page Title -->

<!-- Gallery Section -->
<section id="gallery" class="gallery section">
    <div class="container-fluid" data-aos="fade-up" data-aos-delay="100">
        <div class="row gy-4 justify-content-center">


            @foreach (var photo in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="gallery-item h-100">
                        <img src="@photo.Url" class="img-fluid" alt=""/>
                        <div class="gallery-links d-flex align-items-center justify-content-center">
                            <a href="@photo.Url" title="@photo.Title" class="glightbox preview-link">
                                <i class="bi bi-arrows-angle-expand"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</section>