@model PhotoFolio.ViewModels.PhotographerApplicationViewModel

@{
    ViewData["Title"] = "Want to become a Photographer?";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <style>
        .text-dark-green {
            color: #0f5132;
        }
        .header-dots .dot {
            display: inline-block;
            width: 8px;
            height: 8px;
            background-color: #0f5132;
            border-radius: 50%;
            margin-right: 4px;
        }
    </style>
</head>
<body class="bg-light">

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="form-container">
                <div class="text-center mb-4">
                    <div class="icon-circle mb-3">
                        <i class="bi bi-person-plus-fill fs-1 text-success"></i>
                    </div>
                    <h2 class="form-title text-dark-green">Want to become a Photographer?</h2>
                    <p class="text-muted">Please fill in your details below</p>
                </div>

                <form asp-action="ApplyPhotographer" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="card border-0 shadow">
                        <div class="card-header">
                            <div class="header-dots">
                                <span class="dot"></span>
                                <span class="dot"></span>
                                <span class="dot"></span>
                            </div>
                        </div>
                        <div class="card-body p-4">
                            <!-- Name Field -->
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">
                                    <i class="bi bi-person-fill text-success me-2"></i>Name
                                </label>
                                <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <!-- Surname Field -->
                            <div class="mb-3">
                                <label asp-for="Surname" class="form-label">
                                    <i class="bi bi-person-fill text-success me-2"></i>Surname
                                </label>
                                <input asp-for="Surname" class="form-control" placeholder="Enter your surname" />
                                <span asp-validation-for="Surname" class="text-danger"></span>
                            </div>

                            <!-- Age Field -->
                            <div class="mb-3">
                                <label asp-for="Age" class="form-label">
                                    <i class="bi bi-calendar-fill text-success me-2"></i>Age
                                </label>
                                <input asp-for="Age" type="number" class="form-control" min="18" max="100" placeholder="Enter your age" />
                                <span asp-validation-for="Age" class="text-danger"></span>
                            </div>

                            <!-- Experience Field -->
                            <div class="mb-3">
                                <label asp-for="Experience" class="form-label">
                                    <i class="bi bi-briefcase-fill text-success me-2"></i>Experience (years)
                                </label>
                                <select asp-for="Experience" class="form-select">
                                    <option value="" disabled selected>Select your experience</option>
                                    <option value="0-1">Less than 1 year</option>
                                    <option value="1-3">1-3 years</option>
                                    <option value="3-5">3-5 years</option>
                                    <option value="5-10">5-10 years</option>
                                    <option value="10+">More than 10 years</option>
                                </select>
                                <span asp-validation-for="Experience" class="text-danger"></span>
                            </div>

                            <!-- Portfolio URL Field -->
                            <div class="mb-4">
                                <label asp-for="PortfolioUrl" class="form-label">
                                    <i class="bi bi-link-45deg text-success me-2"></i>Portfolio URL
                                </label>
                                <div class="input-group">
                                    <input asp-for="PortfolioUrl" class="form-control" placeholder="yourportfolio.com" />
                                </div>
                                <span asp-validation-for="PortfolioUrl" class="text-danger"></span>
                                <div class="form-text">Please enter your portfolio website URL</div>
                            </div>

                            <!-- Submit Button -->
                            <div class="d-grid">
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="bi bi-send-fill me-2"></i>Submit Application
                                </button>
                            </div>
                        </div>
                        <div class="card-footer text-center py-3">
                            <span class="text-muted">All fields are required</span>
                        </div>
                    </div>
                </form>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success mt-3">
                        <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- jQuery & Bootstrap JS -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
