@model dynamic

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Application Form</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="form.css">
</head>
<body>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="form-container">
                <div class="text-center mb-4">
                    <div class="icon-circle mb-3">
                        <i class="bi bi-person-plus-fill"></i>
                    </div>
                    <h2 class="form-title">Want to become a Photographer?</h2>
                    <p class="text-muted">Please fill in your details below</p>
                </div>

                <form id="application-form">
                    <div class="card border-0 shadow">
                        <div class="card-header">
                            <div class="header-dots">
                                <span class="dot"></span>
                                <span class="dot"></span>
                                <span class="dot"></span>
                            </div>
                        </div>
                        <div class="card-body p-4">
                            <!-- Name Field -->
                            <div class="mb-3">
                                <label for="name" class="form-label">
                                    <i class="bi bi-person-fill text-accent me-2"></i>Name
                                </label>
                                <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" required>
                            </div>

                            <!-- Surname Field -->
                            <div class="mb-3">
                                <label for="surname" class="form-label">
                                    <i class="bi bi-person-fill text-accent me-2"></i>Surname
                                </label>
                                <input type="text" class="form-control" id="surname" name="surname" placeholder="Enter your surname" required>
                            </div>

                            <!-- Age Field -->
                            <div class="mb-3">
                                <label for="age" class="form-label">
                                    <i class="bi bi-calendar-fill text-accent me-2"></i>Age
                                </label>
                                <input type="number" class="form-control" id="age" name="age" min="18" max="100" placeholder="Enter your age" required>
                            </div>

                            <!-- Experience Field -->
                            <div class="mb-3">
                                <label for="experience" class="form-label">
                                    <i class="bi bi-briefcase-fill text-accent me-2"></i>Experience (years)
                                </label>
                                <select class="form-select" id="experience" name="experience" required>
                                    <option value="" selected disabled>Select your experience</option>
                                    <option value="0-1">Less than 1 year</option>
                                    <option value="1-3">1-3 years</option>
                                    <option value="3-5">3-5 years</option>
                                    <option value="5-10">5-10 years</option>
                                    <option value="10+">More than 10 years</option>
                                </select>
                            </div>

                            <!-- Portfolio URL Field -->
                            <div class="mb-4">
                                <label for="portfolio" class="form-label">
                                    <i class="bi bi-link-45deg text-accent me-2"></i>Portfolio URL
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">https://</span>
                                    <input type="text" class="form-control" id="portfolio" name="portfolio" placeholder="yourportfolio.com" required>
                                </div>
                                <div class="form-text">Please enter your portfolio website URL</div>
                            </div>

                            <!-- Submit Button -->
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg submit-btn">
                                    <i class="bi bi-send-fill me-2"></i>Submit Application
                                </button>
                            </div>
                        </div>
                        <div class="card-footer text-center py-3">
                            <span class="text-muted">All fields are required</span>
                        </div>
                    </div>
                </form>

                <!-- Success Message (initially hidden) -->
                <div class="alert alert-success mt-3 d-none" id="success-message">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    Your application has been submitted successfully!
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<!-- Simple form submission script -->
<script>
    document.getElementById('application-form').addEventListener('submit', function(event) {
        event.preventDefault();
        // Here you would normally send the form data to your server
        console.log('Form submitted');

        // Show success message
        document.getElementById('success-message').classList.remove('d-none');

        // Reset form
        this.reset();

        // Hide success message after 5 seconds
        setTimeout(function() {
            document.getElementById('success-message').classList.add('d-none');
        }, 5000);
    });
</script>
</body>
</html>