@model PhotoFolio.ViewModels.AccountSettingsViewModel

@{
    Layout = null;
    ViewData["Title"] = "Profile Settings";
}
<link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
/>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card border-0 shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">Profile Settings</h3>
                </div>
                <div class="card-body">
                    @if (Model.UpdateSucceeded)
                    {
                        <div class="alert alert-success" role="alert">
                            Your profile has been updated successfully!
                        </div>
                    }

                    <form asp-controller="Profile" asp-action="Profile" method="post" novalidate>
                        <partial name="_ValidationScriptsPartial" />
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <input
                                asp-for="FullName"
                                class="form-control @(ViewData.ModelState["FullName"]?.Errors.Count > 0 ? "is-invalid" : "")"
                            />
                            <span asp-validation-for="FullName" class="invalid-feedback"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label"></label>
                            <input
                                asp-for="Username"
                                class="form-control @(ViewData.ModelState["Username"]?.Errors.Count > 0 ? "is-invalid" : "")"
                            />
                            <span asp-validation-for="Username" class="invalid-feedback"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input
                                asp-for="Email"
                                class="form-control @(ViewData.ModelState["Email"]?.Errors.Count > 0 ? "is-invalid" : "")"
                            />
                            <span asp-validation-for="Email" class="invalid-feedback"></span>
                        </div>

                        <hr class="my-4" />
                        <h5 class="text-success mb-3">Change Password</h5>

                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label"></label>
                            <input
                                asp-for="CurrentPassword"
                                class="form-control @(ViewData.ModelState["CurrentPassword"]?.Errors.Count > 0 ? "is-invalid" : "")"
                            />
                            <span asp-validation-for="CurrentPassword" class="invalid-feedback"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label"></label>
                            <input
                                asp-for="NewPassword"
                                class="form-control @(ViewData.ModelState["NewPassword"]?.Errors.Count > 0 ? "is-invalid" : "")"
                            />
                            <small class="form-text text-muted">
                                Must be at least 6 characters, include lowercase, number.
                            </small>
                            <span asp-validation-for="NewPassword" class="invalid-feedback"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input
                                asp-for="ConfirmPassword"
                                class="form-control @(ViewData.ModelState["ConfirmPassword"]?.Errors.Count > 0 ? "is-invalid" : "")"
                            />
                            <span asp-validation-for="ConfirmPassword" class="invalid-feedback"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                Save Changes
                            </button>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            ← Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>