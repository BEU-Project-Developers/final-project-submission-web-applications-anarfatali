<body>
<header id="header" class="header d-flex align-items-center sticky-top">
    <div class="container-fluid position-relative d-flex align-items-center justify-content-between">

        <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center me-auto me-xl-0">
            <i class="bi bi-camera"></i>
            <h1 class="sitename">PhotoFolio</h1>
        </a>

        <nav id="navmenu" class="navmenu">
            <ul>
                <li><a asp-controller="Home"
                       class="nav-link @(ViewData["ActivePage"]?.ToString() == "Home" ? "active" : "")"
                       asp-action="Index">Home<br></a></li>
                <li><a asp-controller="About"
                       class="nav-link @(ViewData["ActivePage"]?.ToString() == "About" ? "active" : "")"
                       asp-action="Index">About</a></li>
                <li class="dropdown"><a asp-controller="Gallery"
                                        class="nav-link @(ViewData["ActivePage"]?.ToString() == "Gallery" ? "active" : "")"
                                        asp-action="Index"><span>Gallery</span> <i
                            class="bi bi-chevron-down toggle-dropdown"></i></a>
                    <ul>
                        <li><a asp-controller="Gallery"
                               class="nav-link @(ViewData["ActivePage"]?.ToString() == "Gallery" ? "active" : "")"
                               asp-action="Index" asp-route-category="Nature">Nature</a></li>
                        <li><a asp-controller="Gallery"
                               class="nav-link @(ViewData["ActivePage"]?.ToString() == "Gallery" ? "active" : "")"
                               asp-action="Index" asp-route-category="People">People</a></li>
                        <li><a asp-controller="Gallery"
                               class="nav-link @(ViewData["ActivePage"]?.ToString() == "Gallery" ? "active" : "")"
                               asp-action="Index" asp-route-category="Architecture">Architecture</a></li>
                        <li><a asp-controller="Gallery"
                               class="nav-link @(ViewData["ActivePage"]?.ToString() == "Gallery" ? "active" : "")"
                               asp-action="Index" asp-route-category="Animals">Animals</a></li>
                        <li><a asp-controller="Gallery"
                               class="nav-link @(ViewData["ActivePage"]?.ToString() == "Gallery" ? "active" : "")"
                               asp-action="Index" asp-route-category="Sports">Sports</a></li>
                        <li><a asp-controller="Gallery"
                               class="nav-link @(ViewData["ActivePage"]?.ToString() == "Gallery" ? "active" : "")"
                               asp-action="Index" asp-route-category="Travel">Travel</a></li>
                        @* @if (User.Identity.IsAuthenticated && User.IsInRole("Photographer")) *@
                        @* { *@
                        <a asp-controller="Photo" asp-action="Upload" class="btn btn-success ms-3">
                            <i class="bi bi-upload me-1"></i> Upload Photo
                        </a>
                        @* } *@

                    </ul>
                </li>
                <li><a asp-controller="Services"
                       class="nav-link @(ViewData["ActivePage"]?.ToString() == "Services" ? "active" : "")"
                       asp-action="Index">Services</a></li>
                <li><a asp-controller="Contact"
                       class="nav-link @(ViewData["ActivePage"]?.ToString() == "Contact" ? "active" : "")"
                       asp-action="Index">Contact</a></li>
            </ul>
            <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
        </nav>

        <nav class="navbar navbar-expand-lg navbar-dark">

            <div class="ms-auto d-flex align-items-center">
                @* @if (User.Identity.IsAuthenticated) *@
                @* { *@
                <div class="nav-item dropdown ms-1"> <!-- Changed from <li> to <div> -->
                    <a class="nav-link p-0 d-flex align-items-center" href="#" id="userDropdown"
                       role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <div
                            class="user-avatar border border-light rounded-circle overflow-hidden d-flex align-items-center justify-content-center">
                            <img src="~/assets/img/profile.jpg" alt="Avatar" class="img-fluid"/>
                        </div>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark mt-2" aria-labelledby="userDropdown"
                        style="min-width: 200px;">
                        <li class="px-3 py-2 text-white"><strong>@User.Identity.Name Test name</strong></li>
                        <li><a class="dropdown-item mb-1" asp-controller="Account" asp-action="Profile">Profile</a>
                        </li>
                        <li>
                            <form asp-controller="Account" asp-action="Login" class="px-3">
                                <button type="submit" class="btn btn-sm btn-outline-light w-100">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
                @* } *@
            </div>
        </nav>

    </div>
</header>

<main class="main">
    @RenderBody()
</main>

<footer id="footer" class="footer">

