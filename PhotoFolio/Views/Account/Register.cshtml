@model PhotoFolio.ViewModels.RegisterViewModel

@{
    Layout = null;
}

<link rel="stylesheet" href="~/css/login.css"/>

<div class="auth-wrapper">
    <div class="form-modal">
        <h3 class="text-center mb-4">Create a PhotoFolio Account</h3>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your email", type = "email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <br/>

            <div class="mb-3">
                @Html.LabelFor(m => m.Username)
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Choose username" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>
            <br/>

            <div class="mb-3">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Create password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <br/>

            <div class="mb-3">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm password" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-success w-100">Create Account</button>

            <p class="mt-3 text-center small">
                By clicking <strong>Create Account</strong>, you agree to our  <a href="javascript:void(0)" onclick="showEasterEgg()" id="tos-link">
                    Terms of Service
                </a>.
            </p>

            <div id="tos-easter" style="display: none; position: fixed; 
     top: 50%; left: 50%; transform: translate(-50%, -50%); 
     background: rgba(0,0,0,0.8); color: #fff; padding: 1.5rem; 
     border-radius: 8px; z-index: 1000; text-align: center; max-width: 300px;">
                <p>You won't read it anyway—just continue creating your account 😉</p>
                <button onclick="closeEasterEgg()" style="margin-top: 1rem; 
          background: #57b846; color: white; border: none; 
          padding: 0.5rem 1rem; border-radius: 4px;">
                    Got it
                </button>
            </div>
            <!-- (Optional) a semi-transparent backdrop -->
            <div id="tos-backdrop" style="display: none; position: fixed; 
     top: 0; left: 0; width: 100%; height: 100%; 
     background: rgba(0,0,0,0.5); z-index: 900;"></div>

            <script>
                function showEasterEgg() {
                    document.getElementById('tos-backdrop').style.display = 'block';
                    document.getElementById('tos-easter').style.display = 'block';
                }

                function closeEasterEgg() {
                    document.getElementById('tos-easter').style.display = 'none';
                    document.getElementById('tos-backdrop').style.display = 'none';
                }
            </script>
        }

        <p class="text-center small mt-2">
            Already have an account?
            <a href="/Account/Login">Login here</a>
        </p>
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
