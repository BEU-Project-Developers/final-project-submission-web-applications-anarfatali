@using Microsoft.AspNetCore.Mvc.TagHelpers
@model PhotoFolio.ViewModels.AdminDashboardViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/admin-panel.css">
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="px-sm-2 px-0 bg-dark sidebar position-fixed" style="width: 200px;">
            <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                <div
                    class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                    <span class="fs-5 d-none d-sm-inline">Admin Panel</span>
                </div>
                <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="AdminPanel"
                           class="nav-link align-middle px-0 @(ViewData["ActivePage"] == "Dashboard" ? "active" : "")">
                            <i class="fs-4 bi-speedometer2"></i> <span class="ms-1 d-none d-sm-inline">Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Admin" asp-action="Users"
                           class="nav-link px-0 align-middle @(ViewData["ActivePage"] == "Users" ? "active" : "")">
                            <i class="fs-4 bi-people"></i> <span class="ms-1 d-none d-sm-inline">Users</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Admin" asp-action="Photographers"
                           class="nav-link px-0 align-middle @(ViewData["ActivePage"] == "Photographers" ? "active" : "")">
                            <i class="fs-4 bi-camera"></i> <span class="ms-1 d-none d-sm-inline">Photographers</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Admin" asp-action="PhotoGallery"
                           class="nav-link px-0 align-middle @(ViewData["ActivePage"] == "Photo Gallery" ? "active" : "")">
                            <i class="fs-4 bi-image"></i> <span class="ms-1 d-none d-sm-inline">Photo Gallery</span>
                        </a>
                    </li>
                </ul>
                <hr>
                <div class="dropdown pb-4">
                    <div class="d-flex align-items-center text-white text-decoration-none"
                        aria-expanded="false">
                        <img src="~/assets/img/admin.jpg" alt="" width="30" height="30" class="rounded-circle">
                        <span class="d-none d-sm-inline mx-1">Admin User</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        @RenderBody()
    </div>
</div>


@await RenderSectionAsync("Scripts", required: false)
<!-- Bootstrap JS Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>