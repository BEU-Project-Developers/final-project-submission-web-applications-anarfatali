@model PhotoFolio.ViewModels.AdminDashboardViewModel

<!-- Main Content -->
<div class="col py-3 main-content" style="margin-left: 200px">
    <!-- Header -->
    <div class="header mb-4">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="h3">Photo Gallery</h1>
                <p class="text-muted">Manage all uploaded photos</p>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row stats-cards">
        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h5 class="card-title text-muted mb-0">Total Photos</h5>
                            <span class="h2 font-weight-bold mb-0">21</span>
                        </div>
                        <div class="col-auto">
                            <div class="icon-shape bg-primary text-white rounded-circle icon-custom-class shadow">
                                <i class="bi bi-images"></i>
                            </div>
                        </div>
                    </div>
                    <p class="mt-3 mb-0 text-muted text-sm">
                        <span class="text-success mr-2"><i class="bi bi-arrow-up"></i> 8.3%</span>
                        <span class="text-nowrap">Since last week</span>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h5 class="card-title text-muted mb-0">Storage Used</h5>
                            <span class="h2 font-weight-bold mb-0">2.34 MB</span>
                        </div>
                        <div class="col-auto">
                            <div class="icon-custom-class icon-shape bg-info text-white rounded-circle shadow">
                                <i class="bi bi-hdd"></i>
                            </div>
                        </div>
                    </div>
                    <p class="mt-3 mb-0 text-muted text-sm">
                        <span class="text-success mr-2"><i class="bi bi-arrow-up"></i> 5.4%</span>
                        <span class="text-nowrap">Since last month</span>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h5 class="card-title text-muted mb-0">Total Views</h5>
                            <span class="h2 font-weight-bold mb-0">1.2M</span>
                        </div>
                        <div class="col-auto">
                            <div class="icon-shape bg-success text-white rounded-circle shadow">
                                <i class="bi bi-eye"></i>
                            </div>
                        </div>
                    </div>
                    <p class="mt-3 mb-0 text-muted text-sm">
                        <span class="text-success mr-2"><i class="bi bi-arrow-up"></i> 12.8%</span>
                        <span class="text-nowrap">Since last month</span>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h5 class="card-title text-muted mb-0">Downloads</h5>
                            <span class="h2 font-weight-bold mb-0">267</span>
                        </div>
                        <div class="col-auto">
                            <div class="icon-shape bg-warning text-white rounded-circle shadow">
                                <i class="bi bi-download"></i>
                            </div>
                        </div>
                    </div>
                    <p class="mt-3 mb-0 text-muted text-sm">
                        <span class="text-success mr-2"><i class="bi bi-arrow-up"></i> 7.2%</span>
                        <span class="text-nowrap">Since last month</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
