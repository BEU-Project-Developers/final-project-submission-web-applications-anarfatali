@model PhotoFolio.ViewModels.AdminDashboardViewModel

@{
    Layout = "AdminPanelLayout";
    ViewData["Title"] = "Admin Dashboard";
}

<div class="py-3 main-content col-md-9 col-xl-10" style="margin-left: 200px;">
    <!-- Header -->
    <div class="header mb-4">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="h3">Dashboard</h1>
                <p class="text-muted">Welcome back, Admin User</p>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row stats-cards">
        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h5 class="card-title text-muted mb-0">Total Users</h5>
                            <span class="h2 font-weight-bold mb-0">@Model.TotalUsers</span>
                        </div>
                        <div class="col-auto">
                            <div class="icon-shape bg-primary text-white rounded-circle shadow">
                                <i class="bi bi-people"></i>
                            </div>
                        </div>
                    </div>
                    <p class="mt-3 mb-0 text-muted text-sm">
                        <span class="text-success mr-2">
                            <i class="bi bi-arrow-up"></i> since last month
                        </span>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h5 class="card-title text-muted mb-0">Active Users</h5>
                            <span class="h2 font-weight-bold mb-0">@Model.ActiveUsers</span>
                        </div>
                        <div class="col-auto">
                            <div class="icon-shape bg-success text-white rounded-circle shadow">
                                <i class="bi bi-person-check"></i>
                            </div>
                        </div>
                    </div>
                    <p class="mt-3 mb-0 text-muted text-sm">
                        <span class="text-success mr-2">
                            <i class="bi bi-arrow-up"></i> since last week
                        </span>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h5 class="card-title text-muted mb-0">Photographers</h5>
                            <span class="h2 font-weight-bold mb-0">@Model.PhotographersCount</span>
                        </div>
                        <div class="col-auto">
                            <div class="icon-shape bg-warning text-white rounded-circle shadow">
                                <i class="bi bi-camera"></i>
                            </div>
                        </div>
                    </div>
                    <p class="mt-3 mb-0 text-muted text-sm">
                        <span class="text-warning mr-2">
                            <i class="bi bi-arrow-up"></i> today
                        </span>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h5 class="card-title text-muted mb-0">Pending Requests</h5>
                            <span class="h2 font-weight-bold mb-0">@Model.PendingRequests</span>
                        </div>
                        <div class="col-auto">
                            <div class="icon-shape bg-danger text-white rounded-circle shadow">
                                <i class="bi bi-hourglass-split"></i>
                            </div>
                        </div>
                    </div>
                    <p class="mt-3 mb-0 text-muted text-sm">
                        <span class="text-danger mr-2">
                            <i class="bi bi-arrow-up"></i> since last login
                        </span>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h5 class="card-title text-muted mb-0">Photos Uploaded</h5>
                            <span class="h2 font-weight-bold mb-0">@Model.PhotosUploaded</span>
                        </div>
                        <div class="col-auto">
                            <div class="icon-shape bg-info text-white rounded-circle shadow">
                                <i class="bi bi-images"></i>
                            </div>
                        </div>
                    </div>
                    <p class="mt-3 mb-0 text-muted text-sm">
                        <span class="text-success mr-2">
                            <i class="bi bi-arrow-up"></i> last week
                        </span>
                    </p>
                </div>
            </div>
        </div>
    </div>


    <!-- Users Table -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="mb-0">Users</h5>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                    <tr>
                        <th>User</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var user in Model.ActiveUsersList)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="https://via.placeholder.com/40"
                                         class="rounded-circle me-2"
                                         alt="" />
                                    <div>
                                        <h6 class="mb-0">@user.FullName</h6>
                                        <small class="text-muted">ID: #@user.Id</small>
                                    </div>
                                </div>
                            </td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>
                                @if (user.Status == "Active")
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else if (user.Status == "Idle")
                                {
                                    <span class="badge bg-warning text-dark">Idle</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@user.Status</span>
                                }
                            </td>
                            <td>
                                <form asp-area="Admin"
                                      asp-controller="Admin"
                                      asp-action="DeleteUser"
                                      asp-route-id="@user.Id"
                                      method="post"
                                      onsubmit="return confirm('Are you sure you want to delete this user?');"
                                      class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger" title="Delete User">
                                        <i class="bi bi-trash3"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div> <br>

    

    <!-- Photographer Requests Table -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white">
            <div class="row align-items-center">
                <div class="col">
                    <h5 class="mb-0">Photographer Approval Requests</h5>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                    <tr>
                        <th>User</th>
                        <th>Email</th>
                        <th>Experience</th>
                        <th>Portfolio</th>
                        <th>Submitted</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var req in Model.PhotographerRequests)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="https://via.placeholder.com/40" class="rounded-circle me-2" alt="User">
                                    <div>
                                        <h6 class="mb-0">@req.FullName</h6>
                                        <small class="text-muted">ID: #@req.Id</small>
                                    </div>
                                </div>
                            </td>
                            <td>@req.Email</td>
                            <td>@req.Experience</td>
                            <td>
                                <a href="@req.PortfolioLink" class="text-primary" target="_blank">View Portfolio</a>
                            </td>
                            <td>@req.SubmittedDisplay</td>
                            <td>
                                @switch (req.Status)
                                {
                                    case "Pending":
                                        <span class="badge bg-warning text-dark">Pending</span>;
                                        break;
                                    case "Approved":
                                        <span class="badge bg-success">Approved</span>;
                                        break;
                                    case "Rejected":
                                        <span class="badge bg-danger">Rejected</span>;
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@req.Status</span>;
                                        break;
                                }
                            </td>
                            <td>
                                @* Only show Approve/Reject when status == "Pending"; otherwise, show a dash *@
                                @if (req.Status == "Pending")
                                {
                                    <div class="btn-group btn-group-sm">
                                        <form asp-area="Admin"
                                              asp-controller="Admin"
                                              asp-action="ApproveRequest"
                                              asp-route-requestId="@req.Id"
                                              method="post"
                                              class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-success btn-sm">
                                                <i class="bi bi-check-lg"></i> Approve
                                            </button>
                                        </form>
                                        <form asp-area="Admin"
                                              asp-controller="Admin"
                                              asp-action="RejectRequest"
                                              asp-route-requestId="@req.Id"
                                              method="post"
                                              class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="bi bi-x-lg"></i> Reject
                                            </button>
                                        </form>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-secondary">â€“</span>
                                }
                            </td>
                        </tr>
                    }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // If you later need a "search / filter users" script, you can hook it here.
        document.getElementById('searchUsersInput')?.addEventListener('input', function () {
            // TODO: Implement AJAX or frontend filtering logic
        });
    </script>
}
