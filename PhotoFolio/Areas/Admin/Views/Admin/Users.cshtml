@model PhotoFolio.ViewModels.AdminDashboardViewModel

<div class="col py-3 main-content" style="margin-left: 200px">
    <!-- Header -->
    <div class="header mb-4">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="h3">Users Management</h1>
                <p class="text-muted">Manage all registered users</p>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                    <tr>
                        <th>Select</th>
                        <th>User</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var user in Model.ActiveUsersList)
                    {
                        <tr>
                            <td>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="@user.Id" />
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <!-- If you store ProfilePictureUrl in ApplicationUser, use that instead -->
                                    <img src="https://via.placeholder.com/40" class="rounded-circle me-2" alt="User" />
                                    <div>
                                        <h6 class="mb-0">@user.FullName</h6>
                                        <small class="text-muted">ID: #@user.Id</small>
                                    </div>
                                </div>
                            </td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>
                                @if (user.Status == "Active")
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else if (user.Status == "Inactive")
                                {
                                    <span class="badge bg-warning text-dark">Inactive</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@user.Status</span>
                                }
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
